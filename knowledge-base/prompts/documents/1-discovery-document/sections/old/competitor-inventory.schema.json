{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "competitors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "category": {
            "type": "string",
            "enum": [
              "direct",
              "indirect",
              "substitute"
            ]
          },
          "description": {
            "type": "string",
            "minLength": 3
          },
          "target_audience": {
            "type": "string",
            "minLength": 3
          },
          "positioning": {
            "type": "string",
            "minLength": 3
          }
        },
        "required": [
          "name",
          "url",
          "category",
          "description",
          "target_audience",
          "positioning"
        ]
      }
    }
  },
  "required": [
    "competitors"
  ]
}