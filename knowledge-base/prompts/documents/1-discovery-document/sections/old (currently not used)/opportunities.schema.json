{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "opportunities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "opportunity": {
            "type": "string",
            "minLength": 10
          },
        "why_it_remains_unaddressed": {
          "type": "string",
          "minLength": 10
        },
        "user_value_potential": {
          "type": "string",
          "minLength": 10
        }
        },
        "required": [
          "opportunity",
          "why_it_remains_unaddressed",
          "user_value_potential"
        ]
      }
    }
  },
  "required": [
    "opportunities"
  ]
}
