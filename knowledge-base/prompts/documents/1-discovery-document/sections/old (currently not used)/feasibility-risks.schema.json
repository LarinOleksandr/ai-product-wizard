{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "feasibility_risks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "feasibility_risk_type": {
            "type": "string",
            "enum": [
              "business",
              "user",
              "technical"
            ]
          },
          "risks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "feasibility_risk": {
                  "type": "string",
                  "minLength": 5
                },
                "why_it_matters": {
                  "type": "string",
                  "minLength": 5
                }
              },
              "required": [
                "feasibility_risk",
                "why_it_matters"
              ]
            }
          }
        },
        "required": [
          "feasibility_risk_type",
          "risks"
        ]
      }
    }
  },
  "required": [
    "feasibility_risks"
  ]
}
