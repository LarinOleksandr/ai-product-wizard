{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "user_segments": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
                "additionalProperties": false,
                "properties": {
                    "segment_name": {
                        "type": "string",
                        "minLength": 1
                    },
                    "usage_contexts": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "characteristics": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 1
                        },
                        "minItems": 1
                    },
                    "segment_type": {
                        "type": "string",
                        "enum": [
                            "primary",
                            "secondary"
                        ]
                    }
                },
                "required": [
                    "segment_name",
                    "segment_type",
                    "usage_contexts",
                    "characteristics"
                ]
            }
        }
    },
      "required": [
        "user_segments"
      ]
}
