{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "competitor_capabilities": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Functional": {
          "$ref": "#/$defs/capabilityArray"
        },
        "Technical": {
          "$ref": "#/$defs/capabilityArray"
        },
        "Business": {
          "$ref": "#/$defs/capabilityArray"
        }
      },
      "required": [
        "Functional",
        "Technical",
        "Business"
      ]
    }
  },
  "required": [
    "competitor_capabilities"
  ],
  "$defs": {
    "capabilityArray": {
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/$defs/capabilityItem"
      }
    },
    "capabilityItem": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "capability": {
          "type": "string",
          "minLength": 3
        },
        "alignment_with_user_needs": {
          "type": "string",
          "minLength": 3
        },
        "owning_competitors": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "gaps_and_limitations": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0
        }
      },
      "required": [
        "capability",
        "alignment_with_user_needs",
        "owning_competitors",
        "gaps_and_limitations"
      ]
    }
  }
}