{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "AI Product Wizard Glossary Schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "domains": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^D[0-9]+$"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 2
                    },
                    "description": {
                        "type": "string",
                        "minLength": 10
                    }
                },
                "required": [
                    "id",
                    "name",
                    "description"
                ]
            }
        },
        "terms": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^T[0-9]+\\.[0-9]+$"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 2
                    },
                    "domain_id": {
                        "type": "string",
                        "pattern": "^D[0-9]+$"
                    },
                    "definition": {
                        "type": "string",
                        "minLength": 10
                    },
                    "description": {
                        "type": "string",
                        "minLength": 20,
                        "description": "Must be written without repeating the term name; starts with an action verb or explanatory phrase."
                    },
                    "relates_to": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "^T[0-9]+\\.[0-9]+$"
                        },
                        "uniqueItems": true,
                        "default": []
                    },
                    "produces": {
                        "type": "string",
                        "enum": [
                            "artifact",
                            "decision",
                            "structure",
                            "constraint"
                        ]
                    }
                },
                "required": [
                    "id",
                    "name",
                    "domain_id",
                    "definition",
                    "description",
                    "produces"
                ]
            }
        }
    },
    "required": [
        "domains",
        "terms"
    ]
}